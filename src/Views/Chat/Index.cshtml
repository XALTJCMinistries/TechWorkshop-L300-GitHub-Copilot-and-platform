@{
    ViewData["Title"] = "Chat with AI";
}

<div class="container mt-4">
    <h1 class="mb-4">Chat with AI</h1>
    <p class="text-muted">Powered by Microsoft Foundry Phi-4</p>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div id="chatContainer" class="border rounded p-3 mb-3" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                        <div id="chatMessages">
                            <div class="text-muted text-center py-5">
                                <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                                <p class="mt-2">Start a conversation by typing a message below.</p>
                            </div>
                        </div>
                    </div>

                    <form id="chatForm" class="d-flex gap-2">
                        <input type="text" 
                               id="messageInput" 
                               class="form-control" 
                               placeholder="Type your message here..." 
                               autocomplete="off"
                               maxlength="2000" />
                        <button type="submit" id="sendButton" class="btn btn-primary">
                            <span id="sendText">Send</span>
                            <span id="loadingSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">About</h5>
                </div>
                <div class="card-body">
                    <p>This chat feature uses Microsoft Foundry's Phi-4 model to provide AI-powered responses.</p>
                    <p class="mb-0"><strong>Tips:</strong></p>
                    <ul class="mb-0">
                        <li>Ask questions about products</li>
                        <li>Get recommendations</li>
                        <li>Request assistance with your order</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            const chatForm = document.getElementById('chatForm');
            const messageInput = document.getElementById('messageInput');
            const chatMessages = document.getElementById('chatMessages');
            const chatContainer = document.getElementById('chatContainer');
            const sendButton = document.getElementById('sendButton');
            const sendText = document.getElementById('sendText');
            const loadingSpinner = document.getElementById('loadingSpinner');

            let hasMessages = false;

            function addMessage(content, isUser) {
                if (!hasMessages) {
                    chatMessages.innerHTML = '';
                    hasMessages = true;
                }

                const messageDiv = document.createElement('div');
                messageDiv.className = `d-flex ${isUser ? 'justify-content-end' : 'justify-content-start'} mb-3`;
                
                const messageBubble = document.createElement('div');
                messageBubble.className = `p-3 rounded ${isUser ? 'bg-primary text-white' : 'bg-white border'}`;
                messageBubble.style.maxWidth = '80%';
                messageBubble.style.whiteSpace = 'pre-wrap';
                messageBubble.textContent = content;
                
                messageDiv.appendChild(messageBubble);
                chatMessages.appendChild(messageDiv);
                
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }

            function addErrorMessage(error) {
                if (!hasMessages) {
                    chatMessages.innerHTML = '';
                    hasMessages = true;
                }

                const messageDiv = document.createElement('div');
                messageDiv.className = 'd-flex justify-content-start mb-3';
                
                const messageBubble = document.createElement('div');
                messageBubble.className = 'p-3 rounded bg-danger text-white';
                messageBubble.style.maxWidth = '80%';
                messageBubble.textContent = error;
                
                messageDiv.appendChild(messageBubble);
                chatMessages.appendChild(messageDiv);
                
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }

            function setLoading(isLoading) {
                sendButton.disabled = isLoading;
                messageInput.disabled = isLoading;
                sendText.classList.toggle('d-none', isLoading);
                loadingSpinner.classList.toggle('d-none', !isLoading);
            }

            chatForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const message = messageInput.value.trim();
                if (!message) return;

                addMessage(message, true);
                messageInput.value = '';
                setLoading(true);

                try {
                    const response = await fetch('/Chat/SendMessage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ message: message })
                    });

                    const data = await response.json();

                    if (data.success) {
                        addMessage(data.message, false);
                    } else {
                        addErrorMessage(data.error || 'An error occurred. Please try again.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    addErrorMessage('Failed to send message. Please check your connection and try again.');
                } finally {
                    setLoading(false);
                    messageInput.focus();
                }
            });

            messageInput.focus();
        })();
    </script>
}
